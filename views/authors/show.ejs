<h2 class="page-header"><%= author.name %></h2>
<div class="form-row btn-row">
  <a class="btn btn-primary" href="/authors/<%= author.id %>/edit">Edit author</a>
<%- include('../partials/delete-form.ejs', 
                    {url: `/authors/${author.id}` }) %>
</div>


<% if(booksByAuthor.length > 0){ %>
    <h2 class="page-header">Books by <%= author.name %></h2>
    <% booksByAuthor.forEach(book => { %>
        <a href="/books/<%= book.id %>">
        <img height="150" width="100" src="<%= book.coverImagePath %>" />

        </a>
      <% }) %>
<% } %>